&parameter
    nparin  = 1.5D2
    D       = 0.025
    KT      = 1.
    dt      = 3.0D-2 !time step
    t0      = 9D5   !beginning of sampling (assumed relaxation time to steady state)
    t1      = 10D5  !end of sampling
    Rd      = 5    !simulation domain
    U0      = 0
    U1      = 0
    l      = 5     !distance from sink to potential
    g      = 1   !width of potential
    Un      = 16    !steepness of potential
    decay_length = 2.5
    fmode   = 1     !mode for potential switching ( 0:all particles or 1:individual particle)
    nbins   = 100
    potential_shape = 'gau'
/
