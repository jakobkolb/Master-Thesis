&parameter
    nparin  = 1.5D1
    D       = 0.025
    KT      = 1.
    dt      = 3.0D-3 !time step
    t0      = 2D2   !beginning of sampling (assumed relaxation time to steady state)
    t1      = 5D2  !end of sampling
    Rd      = 10    !simulation domain
    U0      = 0
    U1      = 1
    l      = 1     !distance from sink to potential
    g      = 1   !width of potential
    Un      = 2    !steepness of potential
    decay_length = 1
    fmode   = 1     !mode for potential switching ( 0:all particles or 1:individual particle)
    nbins   = 1000
    potential_shape = 'lin'
/
