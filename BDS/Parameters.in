&parameter
    nparin  = 1.5D4
    D       = 0.025
    KT      = 1.
    dt      = 3.0D-3 !time step
    t0      = 2D2   !beginning of sampling (assumed relaxation time to steady state)
    t1      = 5D2  !end of sampling
    Rd      = 10    !simulation domain
    Rs      = 1     !sink radius
    U0      = 0
    U1      = 1
    Ua      = 3     !distance from sink to potential
    Ub      = 6   !width of potential
    Un      = 2    !steepness of potential
    K01     = 0.05     !switching rate for Potential U0 -> U1
    K10     = 0.05     !switching rate for Potential U1 -> U0
    fmode   = 1     !mode for potential switching ( 0:all particles or 1:individual particle)
    nbins   = 1000
/
